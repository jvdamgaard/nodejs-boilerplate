{
  "assets": {
    "less": {
      "source": "./assets/less/style.less",
      "destination": "./public/css/style.css"
    },
    "img": {
      "source": "./assets/img/for-public",
      "destination": "./public",
      "extensions": ["jpg", "jpeg", "png", "gif", "ico"],
      "sprite": {
        "source": "./assets/img/sprite",
        "destination": "./public/img/sprites"
      }
    },
    "js": {
      "manifest": "./assets/js/manifest.json",
      "destination": "./public/js"
    }
  }
}