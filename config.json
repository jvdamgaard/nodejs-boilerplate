{
  "assets": {
    "less": {
      "source": "./assets/less/style.less",
      "destination": "./public/css/style.css"
    },
    "img": {
      "source": "./assets/img/for-public",
      "destination": "./public",
      "extensions": ["jpg", "jpeg", "png", "gif", "ico"]
